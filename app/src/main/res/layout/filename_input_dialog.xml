<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/distance_standard_dialog">

    <EditText
        android:id="@+id/et_filename_input_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="@string/et_filename_input_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:style="?attr/buttonBarStyle">

        <Button
            android:id="@+id/btn_filename_input_dialog_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/distance_standard_dialog"
            android:layout_marginTop="@dimen/distance_standard_dialog"
            android:background="@color/colorPrimaryLight"
            android:text="@android:string/cancel"
            android:textColor="@color/colorTextPrimary" />

        <Button
            android:id="@+id/btn_filename_input_dialog_ok"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_standard_dialog"
            android:background="@color/colorPrimaryLight"
            android:text="@android:string/ok"
            android:textColor="@color/colorTextPrimary" />
    </LinearLayout>

</LinearLayout>